<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
    <appSettings>
        <!-- Enable or disable automatic power plan switching based on idle time -->
        <add key="AutoSwitchEnabled" value="true" />
        
        <!-- Power plan GUID to switch to when computer is idle -->
        <!-- Leave empty to use default (Balanced plan) -->
        <add key="IdlePowerPlan" value="" />
        
        <!-- Power plan GUID to switch to when computer is in active use -->
        <!-- Leave empty to use default (High Performance plan, or Balanced if unavailable) -->
        <add key="ActiveUsePowerPlan" value="" />
        <add key="IdleTimeoutMinutes" value="5" />
        <add key="SwitchWhenLocked" value="False" />
    </appSettings>
</configuration>